    </script>*@


<script>
    var customerUserID = "";

    function SelectWasChanged() {
        customerUserID = $('#customerUserID').val();
        console.log($('#customerUserID').val());
    }

    function changeCustomersInfos(id = @Model.Customer.Id, userId = @Model.Customer.UserId) {
        var id = id;
        var userName = $('#userName').val();
        var email = $('#email').val();
        var title = $('#title').val();
        var city = $('#city').val();
        var companyName = $('#companyName').val();

        if (customerUserID == "") {
            customerUserID = userId;
        }

            $.ajax({
            url: '@Url.Action("CustomerDetails", "Home")',
                data: {
                    City: city,
                    CompanyName: companyName,
                    Email: email,
                    FirstName: userName,
                    Id: id,
                    JobTitle: title,
                    User: "",
                    UserId: customerUserID
            },
            method: "POST",
            success: (response) => {
                if (response==true) {
                    window.location.href = "/Home/GetCustomer";
                }
            },
            error: (xhr) => {
                console.log(xhr);
            }
        })
    }
</script>



